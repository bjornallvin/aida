# Environment variables for Aida
OPENAI_API_KEY=your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
MOPIDY_URL=http://localhost:6680

# Server configuration
PORT=3000

# Audio settings
TTS_OUTPUT_DIR=./audio

# AI settings
OPENAI_MODEL=gpt-3.5-turbo
WHISPER_MODEL=whisper-1

# IKEA DIRIGERA smart home configuration
# Replace with your hub IP address (e.g., 192.168.1.100)
DIRIGERA_GATEWAY_IP=your_dirigera_hub_ip
# Replace with your access token - get this by running: npm run dirigera:setup
DIRIGERA_ACCESS_TOKEN=your_dirigera_access_token

# Legacy Tradfri configuration (commented out - use DIRIGERA instead)
# TRADFRI_GATEWAY_IP=your_tradfri_gateway_ip
# TRADFRI_GATEWAY_KEY=your_tradfri_gateway_key
# TRADFRI_IDENTITY=aida-backend
